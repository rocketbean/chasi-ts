{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ScriptHost", "ESNext"],
    "typeRoots": ["node_modules/@types", "node_modules"],
    "allowJs": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "removeComments": false,
    "forceConsistentCasingInFileNames": true,
    /* Type Checking  */
    "strict": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "noEmitOnError": false,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "sourceMap": false,
    "resolveJsonModule": true,
    "types": ["node", "vitest/globals"]
  },
  "exclude": [
    "prisma",
    "dist",
    "*.config.js",
    "chasi.json",
    "src/container/html",
    "src/container/assets",
    "src/package/framework/Commands",
    "chasi.js",
    "test",
    "vitest.config.ts",
    ".vscode"
  ]
}
